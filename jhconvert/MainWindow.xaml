<Window
    x:Class="jhconvert.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:jhconvert"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Load Excel" Click="LoadExcel_Click" Margin="0,0,10,0"/>
            <CheckBox x:Name="FirstRowAsHeader" Content="First Row as Column Names" IsChecked="True"/>
        </StackPanel>

        <controls:DataGrid x:Name="ExcelDataGrid" Grid.Row="1" AutoGenerateColumns="True" />
    </Grid>
</Window>
